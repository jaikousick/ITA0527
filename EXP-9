import cv2

image = cv2.imread(r"C:\Users\tgjai\Downloads\Sample.jpg.jpeg")   

if image is None:
    print("Error: Image not found")
    exit()

height, width = image.shape[:2]
print("Original Size:", width, "x", height)

bigger_image = cv2.resize(image, None, fx=1.5, fy=1.5, 
                          interpolation=cv2.INTER_LINEAR)

smaller_image = cv2.resize(image, None, fx=0.5, fy=0.5, 
                           interpolation=cv2.INTER_AREA)

cv2.imshow("Original Image", image)
cv2.imshow("Bigger Image", bigger_image)
cv2.imshow("Smaller Image", smaller_image)

cv2.waitKey(0)
cv2.destroyAllWindows()
